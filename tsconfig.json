{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./static/dist",
    "rootDir": "./static/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./static/src/**/*.ts"],
  "exclude": ["node_modules"]
}
